    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--host=127.0.0.1",
                "--port=8000",
                "--no-debugger",
                "--no-reload"
            ],
            "serverReadyAction":{
                "pattern": "Running on http://([0-9]+[.][0-9]+[.][0-9]+[.][0-9]+:[0-9]+).",
                "uriFormat": "http://%s",
                "action": "openExternally"
            },
            "jinja": true
        }
    ]
}